<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".LeaveActivity">



    <GridLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2">

        <ImageButton
            android:id="@+id/leave_register"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:paddingStart="30dp"
            android:paddingTop="35dp"
            android:paddingEnd="30dp"
            android:paddingBottom="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_complaints_color"
            android:textSize="15sp" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Register for Leave"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/leave_status"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:paddingStart="25dp"
            android:paddingTop="35dp"
            android:paddingEnd="10dp"
            android:paddingBottom="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/leave"
            android:textSize="15sp" />



        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Leave Status"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

    </GridLayout>
</LinearLayout>