<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    android:orientation="vertical"
    tools:context=".Student.StudentDashboard">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tmu_logo"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/guideline3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Dashboard"
        android:textColor="@color/detail_color"
        android:textSize="35dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="6"
        app:layout_constraintEnd_toEndOf="@id/guideline5"
        app:layout_constraintStart_toStartOf="@id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageButton
            android:id="@+id/complaint"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:paddingStart="30dp"
            android:paddingTop="35dp"
            android:paddingEnd="30dp"
            android:paddingBottom="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_complaints_color"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/leave"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:paddingStart="25dp"
            android:paddingTop="35dp"
            android:paddingEnd="10dp"
            android:paddingBottom="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/leave"
            android:textSize="15sp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Complaint"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Hostel Leave"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/outing"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:paddingStart="10dp"
            android:paddingTop="35dp"
            android:paddingEnd="10dp"
            android:paddingBottom="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/outings"
            android:textSize="15sp" />
        <ImageButton
            android:id="@+id/mess"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:paddingStart="30dp"
            android:paddingTop="35dp"
            android:paddingEnd="30dp"
            android:paddingBottom="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_mess_color"
            android:textSize="15sp" />



        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Outing(Sunday)"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Mess Menu"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp" />



        <ImageButton
            android:id="@+id/elec_bill"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:paddingStart="30dp"
            android:paddingTop="35dp"
            android:paddingEnd="30dp"
            android:paddingBottom="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/electricity_bill"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/emergency"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:paddingStart="30dp"
            android:paddingTop="35dp"
            android:paddingEnd="30dp"
            android:paddingBottom="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/siren"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Get Electricity Bill"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Emergency"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </GridLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <Button
        android:id="@+id/LogoutBtn"
        style="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_login"
        android:text="Logout"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>