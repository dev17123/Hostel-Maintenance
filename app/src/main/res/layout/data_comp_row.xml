<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="30dp"
    android:paddingBottom="10dp"
    android:layout_marginBottom="5dp"
    >


    <TextView
        android:id="@+id/status_complain_type"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="start"
        android:layout_marginStart="17dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:hint="Type"
        android:textColor="@color/light_black"
        android:textColorHint="@color/light_black"

        android:textSize="15sp" />

    <TextView
        android:id="@+id/status_complain_date"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="end"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="84dp"
        android:layout_toStartOf="@+id/comp_time"
        android:gravity="center"
        android:hint="Date"
        android:textColor="@color/light_black"
        android:textColorHint="@color/light_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/status_complain_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_complain_type"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:hint="Complain Title"
        android:maxLines="3"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/light_black"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_complain_title"
        android:layout_marginTop="5dp"

        >

        <TextView
            android:id="@+id/status_roomNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:hint="Room No"
            android:text="Room No"
            android:textColor="@color/detail_color"
            android:textColorHint="@color/detail_color"
            android:textSize="17sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1.5dp"
            android:layout_alignStart="@id/status_roomNo"
            android:layout_alignTop="@id/status_roomNo"
            android:layout_alignEnd="@id/status_roomNo"
            android:layout_marginTop="20dp"
            android:background="@color/detail_color" />

        <TextView
            android:id="@+id/status_complain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/status_roomNo"
            android:layout_marginStart="20dp"
            android:background="@color/red"
            android:gravity="center"
            android:hint="Status"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="Status"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/comp_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:textColor="@color/light_black"
        android:textColorHint="@color/light_black"
        android:textSize="15sp"
        android:layout_marginEnd="36dp"
        android:text="Time" />


</RelativeLayout>
