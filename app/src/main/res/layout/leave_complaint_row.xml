<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#81C784"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/status_complain_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="start"
                android:layout_marginStart="17dp"
                android:layout_marginTop="4dp"
                android:hint="Complaint Type"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"/>

            <TextView
                android:id="@+id/status_complain_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="start"
                android:layout_marginEnd="170dp"
                android:layout_marginTop="4dp"
                android:hint="Date"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"/>
            <TextView
                android:id="@+id/comp_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="start"
                android:layout_marginEnd="17dp"
                android:layout_marginTop="4dp"
                android:hint="Time"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"/>
            <TextView
                android:id="@+id/status_complain_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comp_time"
                android:gravity="center"
                android:layout_marginEnd="17dp"
                android:layout_marginTop="4dp"
                android:hint="Complaint Title"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textColorHint="@color/black"/>
            <TextView
                android:id="@+id/status_complain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/status_complain_title"
                android:layout_marginStart="15dp"
                android:background="@color/red"
                android:gravity="center"
                android:hint="Status"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Status"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/status_roomNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/status_complain_title"
                android:layout_marginLeft="225dp"
                android:layout_toRightOf="@+id/status_complain"
                android:hint="Room No"
                android:layout_alignParentEnd="true"
                android:textColor="@color/detail_color"
                android:textColorHint="@color/detail_color"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/comp_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Complaint Description"
                android:layout_below="@id/status_roomNo"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textColorHint="@color/black"/>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>