<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rela"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#81C784"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/leave_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="start"
                android:layout_marginStart="17dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:hint="Leave from"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/leave_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="start"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="17dp"
                android:gravity="center"
                android:hint="Leave to"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/stud_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/leave_to"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:hint="Student Name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textColorHint="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/status_leave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stud_name"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:background="@color/red"
                android:gravity="center"
                android:hint="Status"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Status"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/stud_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stud_name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="80dp"
                android:layout_toRightOf="@+id/status_leave"
                android:hint="Course"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/late_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stud_name"
                android:layout_marginLeft="38dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/stud_course"
                android:hint="Late by"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>